<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/cb_cart_goods_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <com.centling.widget.FlexibleImageView
        android:id="@+id/iv_cart_goods_preview"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        app:proportion_height="5"
        app:proportion_width="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_cart_goods_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="HONNY恒尼 P4S1N088莫代尔男短袖圆领商务T恤夏款"
            android:textColor="@color/black1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_cart_goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="价格"
            android:textColor="@color/dark_red_default"
            android:textSize="14sp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_cart_num_op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="@drawable/bg_white_stroke_grey"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cart_goods_sub"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="7dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_cart_delete"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/grey1"/>

                <TextView
                    android:id="@+id/tv_cart_goods_num"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="1"
                    android:textColor="@color/text_default"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/grey1"/>

                <ImageView
                    android:id="@+id/iv_cart_goods_add"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="7dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_cart_add"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cart_goods_spec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="gone"
                android:text="库存为0"
                android:textColor="@color/dark_red_default"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>