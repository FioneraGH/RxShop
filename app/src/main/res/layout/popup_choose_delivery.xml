<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delivery_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_white_grey_corner5"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/text_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="选择配送时间"
            android:textColor="@color/text_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_delivery_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_white_grey_corner5"
            android:padding="5dp"
            android:text="确定"
            android:textColor="@color/text_default" />
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.centling.widget.wheelview.WheelView
            android:id="@+id/wv_delivery_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:background="@color/white" />

        <View
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_margin="4dp"
            android:background="@color/black" />

        <com.centling.widget.wheelview.WheelView
            android:id="@+id/wv_delivery_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>