<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_1dp_grey3"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingTop="10dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_setting_account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/ic_action_next"
            android:gravity="left"
            android:padding="15dp"
            android:text="账户设置"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_setting_clear_image_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            android:drawableRight="@drawable/ic_action_next"
            android:gravity="left"
            android:padding="15dp"
            android:text="清除缓存图片"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/tv_setting_user_proposal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            android:drawableRight="@drawable/ic_action_next"
            android:gravity="left"
            android:padding="15dp"
            android:text="用户协议"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_setting_feed_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            android:drawableRight="@drawable/ic_action_next"
            android:gravity="left"
            android:padding="15dp"
            android:text="意见反馈"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_setting_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            android:drawableRight="@drawable/ic_action_next"
            android:gravity="left"
            android:padding="15dp"
            android:text="关于我们"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_setting_logout"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_dark_red_corner5"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>