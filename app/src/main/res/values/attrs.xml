<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleTextImageView">
        <attr name="citv_border_width" format="dimension"/>
        <attr name="citv_border_color" format="color"/>
        <attr name="citv_border_overlay" format="boolean"/>
        <attr name="citv_fill_color" format="color"/>
        <attr name="citv_text_text" format="string"/>
        <attr name="citv_text_color" format="color"/>
        <attr name="citv_text_size" format="dimension"/>
        <attr name="citv_text_padding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="left_height" format="dimension"/>
        <attr name="left_width" format="dimension"/>
        <attr name="right_height" format="dimension"/>
        <attr name="right_width" format="dimension"/>
        <attr name="top_height" format="dimension"/>
        <attr name="top_width" format="dimension"/>
        <attr name="bottom_height" format="dimension"/>
        <attr name="bottom_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ShSwitchView">
        <attr name="tintColor" format="reference|color" />
        <attr name="outerStrokeWidth" format="reference|dimension" />
        <attr name="shadowSpace" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="FixedFlowLayout">
        <attr name="columns_per_line" format="integer" />
        <attr name="single_selected" format="boolean" />
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
        <attr name="child_gravity" format="integer">
            <flag name="center" value="17" />
            <flag name="top" value="48" />
            <flag name="bottom" value="80" />
            <flag name="start" value="3" />
            <flag name="end" value="5" />
            <flag name="center_vertical" value="16" />
            <flag name="center_horizontal" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FixedFlowLayout_Layout">
        <attr name="span_column" format="integer" />
    </declare-styleable>

    <declare-styleable name="BoxTableLite">
        <attr name="box_checked" format="reference" />
        <attr name="box_sold" format="reference" />
        <attr name="box_available" format="reference" />
    </declare-styleable>

    <declare-styleable name="FlexibleImageView">
        <attr name="proportion_height" format="integer"/>
        <attr name="proportion_width" format="integer"/>
    </declare-styleable>

    <!--红点提示的样式-->
    <declare-styleable name="BGABadgeView">
        <attr name="badge_bgColor" format="reference|color" />
        <attr name="badge_textColor" format="reference|color" />
        <attr name="badge_textSize" format="reference|dimension" />
        <attr name="badge_verticalMargin" format="reference|dimension" />
        <attr name="badge_horizontalMargin" format="reference|dimension" />
        <attr name="badge_padding" format="reference|dimension" />
        <attr name="badge_gravity" format="enum">
            <enum name="rightTop" value="0" />
            <enum name="rightCenter" value="1" />
            <enum name="rightBottom" value="2" />
        </attr>
    </declare-styleable>
</resources>